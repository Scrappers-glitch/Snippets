<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    android:gravity="bottom"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal"
        android:background="@drawable/circle_menu_background"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-250dp"
        >

    <ImageView

        android:id="@+id/closeNav"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="@dimen/horizontal_items_margin"
        android:layout_marginBottom="@dimen/horizontal_items_margin"
        android:layout_marginStart="@dimen/horizontal_items_margin"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_close_black_24dp"
        android:tint="#730000"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:scrollbars="horizontal">

        <ImageView
            android:id="@+id/speakNav"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="@dimen/horizontal_items_margin"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_text_to_speech"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="122dp"/>

        <ImageView
            android:id="@+id/todoNav"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_checkbox_marked" />

        <ImageView
            android:id="@+id/painterNav"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="64dp"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_draw" />

        <ImageView
            android:id="@+id/ocrNav"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="@dimen/horizontal_items_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera_black_24dp"
            android:layout_marginTop="64dp"
            android:layout_alignParentStart="true"
            />
    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>